### Lists - Create Template
POST http://localhost:3000/lists/templates
Authorization: Bearer {{accessToken}}
Content-Type: application/json

{
  "name": "My Template",
  "description": "A template for project management",
  "isPublic": false,
  "workspaceId": "workspace-uuid-here",
  "templateConfig": {
    "statuses": [
      { "name": "Backlog", "orderIndex": 0, "color": "#gray" },
      { "name": "In Progress", "orderIndex": 1, "color": "#blue" },
      { "name": "Review", "orderIndex": 2, "color": "#yellow" },
      { "name": "Done", "orderIndex": 3, "color": "#green" }
    ],
    "customFields": [
      { "name": "Story Points", "type": "number" },
      { "name": "Sprint", "type": "text" }
    ],
    "defaultViewConfig": {
      "type": "kanban"
    },
    "visibility": "private"
  }
}

